{
  "name": "researchlens-ai",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "license": "Apache-2.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron . --dev\"",
    "electron:build": "npm run build && electron-builder",
    "pack": "npm run build && electron-packager . \"ResearchLens\" --platform=win32 --arch=x64 --out=release-packager --overwrite"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/genai": "^1.33.0",
    "better-sqlite3": "^12.5.0",
    "fs-extra": "^11.3.3",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.researchlens.ai",
    "productName": "ResearchLens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "icon": "public/logo.png",
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    }
  }
}
